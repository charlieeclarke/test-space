{
  "extends": "./tsconfig.base.json",
  "include": [
    "next-env.d.ts",
    "vendors",
    "src",
    "scripts",
    "next-i18next.config.js",
    "next.config.js",
    ".next/types/**/*.ts",
    "plopfile.js",
    "plop/**/*.js"
  ],
  "exclude": ["cypress", "tests", "node_modules", "**/*.spec.ts", "**/*.spec.tsx"],
  "compilerOptions": {
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": false
  }
}
